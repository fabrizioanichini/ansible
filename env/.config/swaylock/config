# Set background image
image=/usr/share/backgrounds/sway/Sway_Wallpaper_Blue_2048x1536.png

# Color of the lock screen (as a fallback if image fails)
color=000000FF

# Disable the unlock indicator (makes the interface cleaner)
no-unlock-indicator

# Show keyboard layout while typing
show-keyboard-layout

# Show failed attempts
show-failed-attempts

# Set text color to white for visibility
text-color=FFFFFFFF

# Customize ring and line colors
ring-color=444444FF
inside-color=00000088
line-color=FFFFFF88
key-hl-color=888888FF

# Customize ring color when Caps Lock is active
ring-caps-lock-color=FF0000FF
inside-caps-lock-color=00000088

